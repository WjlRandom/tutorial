@import "../../common/vendor.wxss";

html,
body {
  height: 100%;
}
.container .banner {
  width: 100%;
}
.container .filter {
  width: 100%;
  padding: 0 24rpx;
  box-sizing: border-box;
  box-shadow: 0 2rpx 12rpx 0 rgba(0, 0, 0, 0.1);
  background: #fff;
}
.container .filter .filter-link {
  display: flex;
  padding: 28rpx 24rpx;
  flex-wrap: nowrap;
  justify-content: space-between;
  align-items: center;
}
.container .filter .filter-link .filter-item {
  font-size: 32rpx;
  font-weight: bold;
  padding-right: 40rpx;
  background: url(data:image/png;base64,) no-repeat right center;
  background-size: 36rpx auto;
}
.container .filter .filter-selected {
  display: flex;
  padding: 20rpx 0;
  border-top: 2rpx solid #efefef;
}
.container .filter .filter-selected .selected-item {
  min-width: 100rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 60rpx;
  margin: 0 10rpx;
  text-align: center;
  font-size: 24rpx;
  border: 2rpx solid #cb3129;
  color: #cb3129;
  margin-right: 20rpx;
  overflow: hidden;
  box-sizing: border-box;
  padding: 0 10rpx;
}
.container .filter .filter-selected .selected-reset {
  font-size: 26rpx;
  width: 140rpx;
  height: 60rpx;
  background: #cb3129;
  line-height: 60rpx;
  text-align: center;
  border-radius: 30rpx;
  color: #fff;
}
.container .product-list {
  width: 100%;
}
.container .filter-box {
  position: fixed;
  left: 0;
  bottom: 0;
  right: 0;
  top: 0;
  z-index: 100;
  background: #fff;
}
.container .filter-box .filter-box-top {
  position: absolute;
  top: 0;
  width: 100%;
  padding: 0 24rpx;
  box-sizing: border-box;
  box-shadow: 0 2rpx 12rpx 0 rgba(0, 0, 0, 0.1);
  background: #fff;
}
.container .filter-box .filter-box-top .filter-box-close {
  width: 120rpx;
  height: 48 rpx;
  line-height: 48rpx;
  text-align: center;
  background: #efefef;
  border-radius: 48rpx;
  font-size: 24rpx;
  color: #333;
  margin: 28rpx 0;
}
.container .filter-box .filter-box-top .filter-link {
  border-top: 2rpx solid #efefef;
  display: flex;
  padding: 28rpx 0;
  justify-content: space-around;
}
.container .filter-box .filter-box-top .filter-link .filter-item {
  flex: 1;
  font-size: 32rpx;
  font-weight: bold;
  text-align: center;
}
.container .filter-box .filter-box-top .filter-link .activeTab {
  color: #cb3129;
}
.container .filter-box .filter-box-main {
  position: absolute;
  width: 100%;
  bottom: 0;
  left: 0;
  top: 300rpx;
  overflow: auto;
  z-index: 8;
}
.container .filter-box .filter-box-main .box-list {
  padding: 0 28rpx;
}
.container .filter-box .filter-box-main .box-list .box-list-item {
  padding: 24rpx 0;
  border-bottom: 2rpx solid #efefef;
  background: #fff;
  font-size: 28rpx;
}
.container .tabbar-wrap {
  width: 100%;
  position: fixed;
  bottom: 0;
  height: 100rpx;
  background: #ccc;
  z-index: 99;
}
.container .search-link {
  display: block;
  width: 80rpx;
  height: 80rpx;
  position: fixed;
  background: #cb3129;
  left: 20rpx;
  bottom: 30rpx;
  z-index: 9;
  border-radius: 40rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 24rpx;
  color: #fff;
}
.container .fixed {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 10;
}
.container .data-null {
  top: 60%;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}
.userinfo-nickname {
  color: #aaa;
}
.usermotto {
  background: #ccc;
  margin-top: 150rpx;
}
.form-control {
  display: block;
  padding: 0 24rpx;
  margin-bottom: 10rpx;
  border: 2rpx solid #efefef;
}
.counter {
  display: inline-block;
  margin: 20rpx auto;
  padding: 10rpx 20rpx;
  color: blue;
  border: 2rpx solid blue;
}
.show {
  display: block;
}
.hidden {
  display: none;
}
